{
  "name": "youtube-history-ralph-2026",
  "version": "1.0.0",
  "description": "YouTube Watch History Manager - Electron app for managing personal YouTube watch history",
  "type": "module",
  "main": "dist/main/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.main.json && tsc -p tsconfig.preload.json && vite build",
    "start": "pnpm build && electron .",
    "dev": "pnpm build && electron .",
    "test": "vitest run",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "cli:export": "tsc -p tsconfig.main.json && node dist/cli/export.js",
    "sync:login": "tsx src/sync/login.ts",
    "sync:check": "tsx src/sync/check.ts",
    "sync:fetch": "tsx src/sync/fetch-history.ts",
    "sync:test": "tsx src/sync/test-playwright.ts"
  },
  "keywords": [
    "youtube",
    "history",
    "electron"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "@playwright/test": "^1.58.1",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.1.0",
    "drizzle-kit": "^0.31.8",
    "electron": "^40.1.0",
    "electron-builder": "^26.4.0",
    "playwright": "^1.58.1",
    "svelte": "^5.49.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "drizzle-orm": "^0.45.1"
  }
}